      <li
        class="navigation__item navigation__item--{{slug}}{{#if current}} navigation__item--active{{/if}}"
        role="presentation"
      >
        <a class="navigation__link" href="{{url absolute="true"}}">{{label}}</a>
      </li>
    {{/foreach}}
  </ul>

</nav>