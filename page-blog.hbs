{{!< default}}

<main
  class="content"
  id="content"
  role="main"
  {{#if @blog.cover}}
    style="background: url({{@blog.cover}}) center no-repeat fixed; background-size: cover;"
  {{/if}}
>
  <div class="page__container">
    <header class="page__header">
      <h1 class="page__title">Blog</h1>
    </header>

    <div class="blog-grid">
      {{#if @labs.publicAPI}}
        {{!-- <div class="loading"></div> --}}
      {{else}}
        <p>You need to enable the <a href="{{@blog.url}}/ghost/settings/labs/">Public API</a> feature in your dashboard to use this feature.</p>
      {{/if}}
    </div>
  </div>
</main>

<script type="text/javascript">
  window.page = {
    type: 'post',
    filter: ''
  };
</script>
