{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Main Content --}}
<main
  class="content"
  id="content"
  role="main"
  {{#if @blog.cover}}
    style="url({{@blog.cover}})"
  {{/if}}
>
  <div class="site-info">
    <h1 class="site-info__title">{{@blog.title}}</h1>
    <h2 class="site-info__description">{{@blog.description}}</h2>
    {{!-- TODO, add in social menu --}}
    {{!-- {{> social-menu}} --}}
  </div>
</main>

{{!-- Sidebar --}}
<aside
  class="sidebar"
  id="sidebar"
  role="contentinfo"
>

  {{!-- Sidebar Content --}}
  <div class="sidebar__content">
